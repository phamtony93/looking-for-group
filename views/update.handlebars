<div class="container">
<h2>Update Event Details</h2>
	<div class="form-group">
		<label for="eventTitle">Event Title</label>
		<input type="text" class="form-control" id="eventTitle" name="eventTitle" value="{{title}}">
	</div>

	<div class="form-group">
		<label for="eventAddress">Address</label>
		<input type="text" class="form-control" id="eventAddress" name="eventAddress" value="{{address}}">
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="eventCity">City</label>
			<input type="text" class="form-control" id="eventCity" name="eventCity" value="{{city}}">
		</div>
		<div class="form-group col-md-4">
			<label for="eventState">State</label>
			<select id="eventState" class="form-control" name="eventState" value="{{state}}">
