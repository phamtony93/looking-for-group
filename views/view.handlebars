<div class="container">
	<h2>Event Details</h2>
	<table class="table" id="eventTable">
			<tr>
		<th>{{title}}</th>
	</tr>
	<tr>
		<td>Location: {{address}} {{city}} {{zip}}</td>
	</tr>
	<tr>
		<td>Start Date: {{startDate}} to End Date: {{endDate}}</td>
	</tr>
	<tr>
		<td>Event Description: {{description}}</td>
	</tr>
	<tr>
		<td>Age Range: {{lowerAge}} to {{upperAge}}</td>
	</tr>
	<tr>
		<td> Gender: {{#if both}}Both{{else}}{{#if male}}Male{{else}}Female{{/if}}{{/if}}</td>
	</tr>
	<tr>
		<td>{{#if poster}}<form id="{{event_id}}"><button class="btn btn-primary" type="button" onClick="updateRow(this)">Update</button></form>
			{{else}}<form id="{{event_id}}"><button class="btn btn-primary" type="button" onClick="joinRow(this)">Request to Join</button>
			</form>{{/if}}
		</td>
	</tr>
	</table>
</div>

{{#if poster}}
<div class="container">
	<h2>Event Requests</h2>
<table class="table" id="requestTable">
	<tr>
		<th>User</th>
		<th>Actions</th>
	</tr>
	{{#each requests}}
	<tr>
		<td>{{this.user_id}}</td>
		<td><a href="/accept_deny?user_id={{this.user_id}}&event_id={{event_id}}&accept=1"><button
					class="btn btn-primary" type="button">Accept</button></a><a
				href="/accept_deny?user_id={{this.user_id}}&event_id={{event_id}}&accept=0"><button
					class="btn btn-primary" type="button">Deny</button></a></td>
	</tr>
	{{/each}}
</table>
{{/if}}
</div>

